<main> 
    {{#if hasProducts}}
        <div class="grid">
            {{#each prods }}
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">{{this.title}}</h1>
                    </header>
                    <div class="card__image">
                        <img src="{{this.imageUrl}}" alt="A Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">${{this.price}}</h2>
                        <p class="product__description">{{this.desc}}</p>
                    </div>
                    <div class="card__actions">
                        <a href="/admin/edit-product/{{this.id}}?edit=true" class="btn">edit</a>
                        <form action="/admin/delete-product" method="post">
                            <input type="hidden" name="id" value="{{this.id}}">
                            <input type="hidden" name="title" value="{{this.title}}">
                            <input type="hidden" name="imageUrl" value="{{this.imageUrl}}">
                            <input type="hidden" name="price" value="{{this.price}}">
                            <input type="hidden" name="desc" value="{{this.desc}}">
                            <button type="submit" class="btn">delete</button>
                        </form>
                    </div>
                </article>
            {{/each}}
        </div>
    {{ else }}
        <h1>No Products Found!</h1>
    {{/if}}
</main>

